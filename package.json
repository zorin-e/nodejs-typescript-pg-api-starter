{
  "name": "boilerplate-nodejs-typescript-pg-api",
  "version": "1.0.0",
  "description": "Boilerplate for developing API on nodejs and pg with typescript, linter and jest",
  "main": "index.js",
  "scripts": {
    "lint": "eslint '*/**/*.{js,ts}' --quiet",
    "lint-fix": "npm run lint -- --fix",
    "clean": "rm -rf ./build && mkdir ./build",
    "build-ts": "tsc",
    "build": "npm run clean && npm run build-ts",
    "dev": "nodemon -r tsconfig-paths/register --exec ts-node ./src/index.ts --watch ./src",
    "start": "npm run build && node -r ts-node/register/transpile-only -r tsconfig-paths/register ./build/index.js",
    "test:watch": "jest --watch",
    "test": "jest --coverage"
  },
  "keywords": [],
  "author": "Egor Zorin",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^4.17.7",
    "@types/node-fetch": "^2.5.6",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "node-fetch": "^2.6.0",
    "pg": "^8.3.0",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7"
  },
  "devDependencies": {
    "@types/jest": "^26.0.9",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.2.2",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint-fix"
    ]
  }
}
